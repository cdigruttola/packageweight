{% extends '@PrestaShop/Admin/layout.html.twig' %}
{% form_theme form '@PrestaShop/Admin/TwigTemplateForm/prestashop_ui_kit.html.twig' %}

{% block content %}
    {{ form_start(form) }}

    <div class="row justify-content-center">
      <div class="col-xl-12">
        <div class="card">
          <h3 class="card-header">
            <i
              class="material-icons">settings</i> {{ 'Settings'|trans({}, 'Admin.Global') }}
          </h3>
          <div class="card-block">
            <div class="card-body">
              <div class="form-wrapper">
                {{ form_widget(form) }}
                {{ form_rest(form) }}
              </div>
            </div>
          </div>
          <div class="card-footer">
            <div class="d-flex justify-content-end">
              <button class="btn btn-primary"
                      id="form-maintenance-save-button">{{ 'Save'|trans({}, 'Admin.Actions') }}</button>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('../modules/packageweight/views/js/index.bundle.js') }}"></script>
{% endblock %}
